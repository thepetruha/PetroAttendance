<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select - Petro</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet"> 
</head>
<body>
    <header>
        <div class="container">
            <div class="group">
                <a href="/" class="back"></a>
                <h2>39-03</h2>
                <p>Четверг 16.09.2021</p>
            </div>
        </div>
    </header>
    <section id="select">
        <div class="container">
            <h3>Выберите количество пар на сегодня:</h3>
             <nav>
                 <ul>
                     <li class="box">1</li>
                     <li class="box">2</li>
                     <li class="box">3</li>
                     <li class="box">4</li>
                     <li class="box">5</li>
                     <li class="box">6</li>
                 </ul>
             </nav>
         </div>
    </section>    
    <script>
        var box = document.getElementsByClassName("box");
        for(let key in box){
            if(box[key].innerHTML != undefined){
                // console.log(box[key].innerHTML); 
                box[key].addEventListener('click', event => {
                    console.log(box[key].innerHTML);
                    let par = +(box[key].innerHTML)
                    window.location.replace(`http://localhost:4000/send?par=${par}`);
                })
            }
        }
    </script>
</body>
